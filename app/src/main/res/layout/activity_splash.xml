<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white"
	tools:context="io.tripmate.ui.SplashActivity">
	
	<io.peanutsdk.widget.FourThreeImageView
		android:id="@+id/splas_img"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:src="@drawable/icon"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
	
	<io.peanutsdk.widget.BaselineGridTextView
		android:id="@+id/splash_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/spacing_large"
		android:padding="@dimen/padding_normal"
		android:text="@string/app_name"
		android:textAppearance="@style/TextAppearance.DribbbleShotDescription"
		android:textColor="@color/text_primary_dark"
		android:textSize="22sp"
		app:fontFamily="@font/abeezee"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/splas_img" />
	
	<io.peanutsdk.widget.BaselineGridTextView
		android:id="@+id/splash_desc"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingEnd="@dimen/padding_normal"
		android:paddingStart="@dimen/padding_normal"
		android:text="@string/app_desc"
		android:textAlignment="center"
		android:textAppearance="@style/TextAppearance.DribbbleShotDescription"
		android:textColor="@color/text_secondary_dark"
		app:fontFamily="@font/abeezee"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/splash_title" />

</android.support.constraint.ConstraintLayout>
